<h1><%= @restaurant.name %></h1>
<h6>CATEGORY: <%= @restaurant.category.capitalize %></h6>
<h6>ADDRESS: <%= @restaurant.address %></h6>

<% if @restaurant.phone_number == nil %>
  <h6>PHONE NUMBER: n/a</h6>
<% else %>
  <h6>PHONE NUMBER: <%= @restaurant.phone_number %></h6>
<% end %>

<br>
<br>

<h3>Write a new review for <strong><%= @restaurant.name %></strong></h3>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating,
              collection: 0..5,
              prompt: "Please select a number"  %>
  <%= f.input :content %>
  <%= f.submit "Submit", class: "btn btn-primary"%>
 <% end %>

<br>
<br>

<h3>All Reviews</h3>

<% @restaurant.reviews.each do |review| %>
  <p><%= review.rating %> - <%= review.content %></p>
<% end %>
